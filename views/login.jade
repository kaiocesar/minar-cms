extends layout

block content
    div.jumbotron
        div.container
            img.img-responsive(src='/images/logo.svg')            
            form.col-md-6.form-login(action='', method='post')
                div.input-group.input-group-lg
                    span.input-group-addon.glyphicon.glyphicon-user
                    input.form-control(type='text', name='username')
                br
                div.input-group.input-group-lg
                    span.input-group-addon @
                    input.form-control(type='password', name='password')
                br
                input.btn.btn-primary.pull-right(type='submit', value='Entrar')
